<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zvezdnoe_nebo_fonovii_risunok_1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:text="Счётчик звёзд"
        android:textColor="#FFEB3B"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ground"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="60sp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:clickable="true"
        android:onClick="onClickBtnAddStar"
        android:text="Звезда +1"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:clickable="true"
        android:onClick="offClickaddStar"
        android:text="Звезда +2"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:clickable="true"
        android:onClick="offClickaDdMStar"
        android:text="обнулить"
        android:textColor="#FFFFFF" />

</LinearLayout>